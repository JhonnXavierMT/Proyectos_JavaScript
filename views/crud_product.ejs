<%- include("layout/header") %>
    <h1 style="text-align: center;">Creacion de aproducto</h1>
  <div class="container" style="width: 80%;">
    <form action="/crud_office" method="post" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="Nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" placeholder="Nombre" aria-label="Nombre" aria-describedby="basic-addon1" required name="nombre">
      </div>
      <label for="Descripcion" class="form-label">Descripcion</label>
      <textarea class="form-control" id="Descripcion" rows="3" name="descripcion"></textarea>
      <div class="mb-3">
        <label for="Precio" class="form-label">Precio</label>
        <input type="number" class="form-control" placeholder="Precio" aria-label="Precio" aria-describedby="basic-addon1" required name="precio">
      </div>
      <div class="mb-3">
        <label for="Cantidad" class="form-label">Cantidad</label>
        <input type="number" class="form-control" placeholder="Cantidad" aria-label="Precio" aria-describedby="basic-addon1" name="cantidad">
      </div>
      <div class="mb-3">
        <label for="formFile" class="form-label">Imagen</label>
        <input class="form-control" type="file" id="formFile" name="imagen">
      </div>
      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
      <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
  </div>
<%- include("layout/footer") %>