<%- include("layout/header") %>
    <h1 style="text-align: center;">Edicion de aproducto <%= producto.id %></h1>
    <div class="container" style="width: 80%;">
      <form action="../actualizar" method="post" enctype="multipart/form-data">
      <input type="hidden" name="id" value="<%= producto.id %>">
      <div class="mb-3">
        <label for="Nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" placeholder="Nombre" aria-label="Nombre" aria-describedby="basic-addon1" required name="nombre" value="<%= producto.nombre %>">
      </div>
      <label for="Descripcion" class="form-label">Descripcion</label>
      <textarea class="form-control" id="Descripcion" rows="3" name="descripcion"><%= producto.descripcion %></textarea>
      <div class="mb-3">
        <label for="Precio" class="form-label">Precio</label>
        <input type="number" class="form-control" placeholder="Precio" aria-label="Precio" aria-describedby="basic-addon1" required name="precio" value="<%= producto.precio %>">
      </div>
      <div class="mb-3">
        <label for="Cantidad" class="form-label">Cantidad</label>
        <input type="number" class="form-control" placeholder="Cantidad" aria-label="Precio" aria-describedby="basic-addon1" name="cantidad"value="<%= producto.cantidad %>">
      </div>
      <div class="mb-3">
        <label for="formFile" class="form-label">Imagen</label>
        <div class="d-flex justify-content-center pb-3">
          <img src="/img/img_products/<%= producto.imagen%>" width="100px" alt="<%= producto.imagen%>">
        </div>
        <input class="form-control" type="file" id="formFile" name="imagen">
      </div>
      <div class="d-flex justify-content-end">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-primary ">Editar</button>
      </div>
    </form>
  </div>
<%- include("layout/footer") %>